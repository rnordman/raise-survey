<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView android:text="@string/title_raise_earn_bonus_points" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/titleMainFragment" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listSurveyCards"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textPleaseChoose"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_total_points_earned"
        android:id="@+id/labelTotalPointsEarned"
        android:layout_below="@+id/titleMainFragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textTotalPointsEarned"
        android:layout_below="@+id/titleMainFragment"
        android:layout_toRightOf="@+id/labelTotalPointsEarned"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_which_gift_card"
        android:id="@+id/textPleaseChoose"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/labelTotalPointsEarned"
        android:layout_alignRight="@+id/titleMainFragment"
        android:layout_alignEnd="@+id/titleMainFragment" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_new_offer"
        android:id="@+id/buttonRefresh"
        android:layout_below="@+id/listSurveyCards"
        android:layout_alignRight="@+id/textPleaseChoose"
        android:layout_alignEnd="@+id/textPleaseChoose" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="New offers loading - please wait"
        android:id="@+id/textPleaseWait"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/labelTotalPointsEarned"
        android:layout_alignRight="@+id/titleMainFragment"
        android:layout_alignEnd="@+id/titleMainFragment"
        />


</RelativeLayout>
